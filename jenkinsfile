pipeline {

    agent any 

    triggers {
            cron('H */2 * * *')
        }

    stages {

        stage("Checkout") {
            steps {
                checkout scm 
            }
        }

        stage("Installing") {
            steps {
                bat 'npm install'
            }
        }

        stage('Lint') {
            when { expression { fileExists('eslint.config.ts') || fileExists('.eslintrc') } }
            steps {
                bat 'npm run lint'
            }
        }

        stage("Prettier") {
            when { expression { fileExists('.prettierrc') } }
            steps {
                bat 'npm run format'
            }
        }

        stage("Testing") {
            steps {
                bat 'npm test'
            }
        }

        stage('Build') {
            steps {
                bat 'npm run build'
            }
        } 
    }

    post {
            always {
                junit testResults: 'reports/junit/**/*.xml', allowEmptyResults: true
            }
        }
}